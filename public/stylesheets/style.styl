logoColor = #383838
descrColor = #898989
footerColor = #999999
mainColor = #111111
backgroundColor = #fcfcfc

html, body, p, div, h1. h2, h3, span
    margin: 0px
    padding: 0px


body
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif


#clear
    clear: left

#head
    text-align: center
    margin-bottom: 40px

#logo
    color: logoColor
    font: 50px sans-serif, Helvetica, Arial
    margin-top: 60px
    letter-spacing: 0.3em
#logo:first-letter
    color: mainColor

#descr
    color: descrColor
    font: 15px sams-serif
    margin-left: -5px

#container
    width: 860px
    height: auto
    background: backgroundColor
    margin: 5px auto;
    padding: 5px

#container #picker
    margin: 15px
    width: 100px

#menu
    width: 100%
    
#menu ul
    margin: 0px
    padding: 0px
  
#menu ul li
    list-style: none
    text-align: center
    
#menu ul li a
    text-decoration: none
    color: logoColor
    font-size: 20px
    width: 100px
    float: left
    background-color: mainColor
    padding: 10px 15px
    margin: 10px
    font-variant: small-caps

#userlist
    width:80%

#userlist .idhead
    float: left
    width: 20%
#userlist .namehead
    float: left
    width: 60%
#userlist .scorehead
    float: left
    width: 20%    


.user
    margin: 0px
    padding: 0px

.user .id
    float: left
    width: 20%
.user .name
    float: left
    width: 60%

.user .score
    float: left
    width: 20%

#footer
    text-align: center
    color: footerColor
    font: 12px "Courier New"